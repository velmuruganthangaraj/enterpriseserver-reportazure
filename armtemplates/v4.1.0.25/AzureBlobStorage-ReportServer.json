{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AppServiceName": {
      "type": "string"
    },
    "AppServicePlanLocation": {
      "type": "string"
    },
    "AppServicePlanResourceGroup": {
      "type": "string"
    },
    "AppServiceType": {
      "type": "string",
      "allowedValues": [
        "RS",
        "UMS"
      ],
      "metadata": {
        "description": "AppService to be deployed"
      },
      "defaultValue": "RS"
    },
    "BlobStorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "BlobStorageName": {
      "maxLength": 24,
      "minLength": 3,
      "type": "string",
      "metadata": {
        "description": "Storage account name for Report Server. The name must be between 3 to 24 characters long, and can contain only numbers and lowercase letters."
      }
    },
    "deploySiteSettings": {
      "type": "object"
    },
    "GithubURL": {
      "type": "string"
    },
    "ReleaseVersion": {
      "type": "string"
    },
    "StorageType": {
      "type": "string",
      "allowedValues": [
        "FileStorage",
        "AzureBlobStorage"
      ],
      "metadata": {
        "description": "Choose a storage type for storing files the Report Server generates. A complete list of files generated by the Report Server can be viewed <a target='_blank' href='https://help.syncfusion.com/Report-platform/Report-server/faq#what-all-are-the-files-and-folders-will-be-generated-in-the-installed-machine'>here</a>."
      },
      "defaultValue": "FileStorage"
    },
    "utcShortValue": {
      "type": "string",
      "defaultValue": "[utcNow('d')]"
    }
  },
  "resources": [
    {
      "name": "[parameters('AppServiceName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('AppServicePlanLocation')]",
      "apiVersion": "2015-08-01",
      "dependsOn": [],
      "tags": {
        "[concat('hidden-related:', resourceId(parameters('AppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', 'SyncfusionAppSvcPlan'))]": "Resource",
        "displayName": "AppService",
        "AppName": "[resourceGroup().tags['AppName']]",
        "Approver": "[resourceGroup().tags['Approver']]",
        "BusinessUnit": "[resourceGroup().tags['BusinessUnit']]",
        "Env": "[resourceGroup().tags['Env']]",
        "HostModel": "[resourceGroup().tags['HostModel']]",
        "Importance": "[resourceGroup().tags['Importance']]",
        "Owner": "[resourceGroup().tags['Owner']]",
        "Platform": "NA",
        "ProductName": "[resourceGroup().tags['ProductName']]",
        "Requester": "velmurugan.thangaraj@syncfusion.com",
        "StartDate": "[parameters('utcShortValue')]"
      },
      "properties": {
        "name": "[parameters('AppServiceName')]",
        "serverFarmId": "[resourceId(parameters('AppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', 'SyncfusionAppSvcPlan')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('AppServiceName'))]"
          ],
          "name": "web",
          "properties": {
            "RepoUrl": "[parameters('GithubURL')]",
            "branch": "[parameters('ReleaseVersion')]",
            "IsManualIntegration": true
          },
          "type": "sourcecontrols"
        },
        {
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('AppServiceName'))]"
          ],
          "name": "web",
          "properties": "[parameters('deploySiteSettings')]",
          "tags": {
            "displayName": "Configuration"
          },
          "type": "config"
        },
        {
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('AppServiceName'))]",
            "[concat('Microsoft.Storage/storageAccounts/', parameters('BlobStorageName'))]",
            "web"
          ],
          "name": "appsettings",
          "properties": {
            "AzureStorageAccessKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('BlobStorageName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]",
            "AzureStorageAccountName": "[parameters('BlobStorageName')]",
            "AzureStorageBlobServiceEndpoint": "[concat('https://',parameters('BlobStorageName'), '.blob.core.windows.net/')]",
            "AzureStorageBlobURL": "[concat('https://',parameters('BlobStorageName'), '.blob.core.windows.net/')]",
            "AzureStorageConnectionType": "https",
            "AzureStorageContainerName": "[concat('syncfusion',toLower(parameters('AppServiceType')),'container')]",
            "IsAzureApplication": "true",
            "log4net.Config": "logs\\log4net.config",
            "StorageType": "AzureBlob"
          },
          "tags": {
            "displayName": "BlobAppSetting"
          },
          "type": "config"
        }
      ]
    },
    {
      "apiVersion": "2016-01-01",
      "dependsOn": [],
      "kind": "Storage",
      "location": "[parameters('AppServicePlanLocation')]",
      "name": "[parameters('BlobStorageName')]",
      "sku": {
        "name": "[parameters('BlobStorageAccountType')]"
      },
      "tags": {
        "displayName": "BlobStorageAccount",
        "AppName": "[resourceGroup().tags['AppName']]",
        "Approver": "[resourceGroup().tags['Approver']]",
        "BusinessUnit": "[resourceGroup().tags['BusinessUnit']]",
        "Env": "[resourceGroup().tags['Env']]",
        "HostModel": "[resourceGroup().tags['HostModel']]",
        "Importance": "[resourceGroup().tags['Importance']]",
        "Owner": "[resourceGroup().tags['Owner']]",
        "Platform": "NA",
        "ProductName": "[resourceGroup().tags['ProductName']]",
        "Requester": "velmurugan.thangaraj@syncfusion.com",
        "StartDate": "[parameters('utcShortValue')]"
      },
      "type": "Microsoft.Storage/storageAccounts"
    }
  ]
}
